@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>
<hr />

<div class="row mt-5 mb-5">

    <div class="col-md-4 mr-5">
        <form method="post" class="mt-5">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LifeGoals.Name" class="control-label"></label>
                <input asp-for="LifeGoals.Name" class="form-control" />
                <span asp-validation-for="LifeGoals.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LifeGoals.Description" class="control-label"></label>
                <input asp-for="LifeGoals.Description" class="form-control" />
                <span asp-validation-for="LifeGoals.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LifeGoals.Start" class="control-label"></label>
                <input asp-for="LifeGoals.Start" class="form-control" />
                <span asp-validation-for="LifeGoals.Start" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LifeGoals.End" class="control-label"></label>
                <input asp-for="LifeGoals.End" class="form-control" />
                <span asp-validation-for="LifeGoals.End" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LifeGoals.Progress" class="control-label"></label>
                <input asp-for="LifeGoals.Progress" class="form-control" />
                <span asp-validation-for="LifeGoals.Progress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-info" />
            </div>
        </form>
    </div>

    <div class="col-md-6 ml-5">
        <img src="~/images/create.jpg" class="img-wrapper w-100" />
    </div>

</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
