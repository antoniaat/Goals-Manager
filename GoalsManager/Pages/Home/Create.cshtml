@model GoalsManager.Pages.Home.CreateModel

@{
    ViewData["Title"] = "Create";
}

    <div class="row mt-5 mb-5">

        <div class="col-md-4 mr-5">
            <form method="post" class="mt-5">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Goals.Name" class="control-label"></label>
                    <input asp-for="Goals.Name" class="form-control" />
                    <span asp-validation-for="Goals.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Goals.Description" class="control-label"></label>
                    <input asp-for="Goals.Description" class="form-control" />
                    <span asp-validation-for="Goals.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Goals.Start" class="control-label"></label>
                    <input asp-for="Goals.Start" class="form-control" />
                    <span asp-validation-for="Goals.Start" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Goals.End" class="control-label"></label>
                    <input asp-for="Goals.End" class="form-control" />
                    <span asp-validation-for="Goals.End" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Goals.Progress" class="control-label"></label>
                    <input asp-for="Goals.Progress" class="form-control" />
                    <span asp-validation-for="Goals.Progress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-info" />
                </div>
            </form>
        </div>

        <div class="col-md-6 ml-5">
            <img src="~/images/create.jpg" class="img-wrapper w-100"/> 
        </div>

    </div>

